{% for director in groups['baculadir'] %}
Director {
  Name = {{ hostvars[director]['inventory_hostname_short'] }}-dir
  DIRport = 9101
  address = {{ hostvars[director]['inventory_hostname'] }}
  Password = "{{ hostvars[director]['baculadir_passwd'] }}"
}
{% endfor %}
